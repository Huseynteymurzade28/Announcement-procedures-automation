<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="510.0" prefWidth="788.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.announcement_procedures_automation_projectoop.Controllers.pListcontroller">
    <children>
        <Label layoutX="53.0" layoutY="35.0" prefHeight="40.0" prefWidth="315.0" text="Add a Proclamation">
            <font>
                <Font size="35.0" />
            </font>
        </Label>

        <TextField fx:id="textField" layoutX="53.0" layoutY="196.0" prefHeight="58.0" prefWidth="416.0" />

        <Button layoutX="164.0" layoutY="290.0" mnemonicParsing="false" onAction="#addProclamation" prefHeight="51.0" prefWidth="226.0" text="Add">
            <style>
                -fx-background-color: #4CAF50; /* Yeşil arka plan */
                -fx-text-fill: white; /* Beyaz metin */
                -fx-font-size: 18px; /* Daha büyük yazı */
                -fx-font-weight: bold; /* Kalın yazı */
                -fx-border-radius: 25;
                -fx-background-radius: 25;
                -fx-effect: innershadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 4);
            </style>
        </Button>

        <Button layoutX="35.0" layoutY="434.0" mnemonicParsing="false" onAction="#switchToBack" prefHeight="51.0" prefWidth="133.0" text="Back">
            <style>
                -fx-background-color: #FF6347; /* Domates kırmızısı */
                -fx-text-fill: white;
                -fx-font-size: 16px;
                -fx-font-weight: bold;
                -fx-border-radius: 25;
                -fx-background-radius: 25;
                -fx-effect: innershadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.0, 0, 4);
            </style>
        </Button>

        <ListView fx:id="plist" layoutX="518.0" layoutY="35.0" prefHeight="440.0" prefWidth="244.0">
            <style>
                -fx-background-color: #F5F5F5; /* Açık gri arka plan */
                -fx-border-color: #DCDCDC; /* Açık gri sınır */
                -fx-font-size: 16px; /* Orta boy yazı */
                -fx-text-fill: #00008B; /* Koyu mavi metin rengi */
                -fx-border-radius: 10;
                -fx-background-radius: 10;
            </style>
        </ListView>
    </children>
</AnchorPane>
